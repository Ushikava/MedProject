<Window x:Class="TestV.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestV"
        xmlns:q="clr-namespace:TestV.Questions"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid Margin="3" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <UniformGrid Grid.Row="1" Columns="3" Margin="3">
            <Button Click="Button_Click_prev" Margin="3">prev</Button>
            <Label HorizontalAlignment="Center" Name="CurrentQuestLBL">0</Label>
            <Button Click="Button_Click_next" Margin="3">next</Button>
        </UniformGrid>
    </Grid>
</Window>
