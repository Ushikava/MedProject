<UserControl x:Class="TestV.Questions.Elements.RateVariant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:TestV.Questions.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="QuestionPanel">
            <TextBlock Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <RadioButton Name="Answer_0" Content="Нисколько" Checked="Answer_changed"/>
            <RadioButton Name="Answer_1" Content="Немного" Checked="Answer_changed"/>
            <RadioButton Name="Answer_2" Content="Умеренно" Checked="Answer_changed"/>
            <RadioButton Name="Answer_3" Content="Сильно" Checked="Answer_changed"/>
            <RadioButton Name="Answer_4" Content="Крайне сильно" Checked="Answer_changed"/>
        </StackPanel>
    </Grid>
</UserControl>
